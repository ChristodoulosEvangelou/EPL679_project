<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- mini tabs with icons (GOALS SELECTED) - NO CARD WRAPPER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleTabs"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:checkedButton="@+id/btnTabGoals">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTabProfile"
                        style="@style/SegFirst"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Profile"
                        app:icon="@drawable/profile_button"
                        app:iconPadding="6dp"
                        app:iconGravity="textStart"
                        app:iconTint="@color/seg_btn_text"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTabGoals"
                        style="@style/SegLast"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Goals"
                        app:icon="@drawable/ic_goal"
                        app:iconPadding="6dp"
                        app:iconGravity="textStart"
                        app:iconTint="@color/seg_btn_text"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <!-- Card: Daily Steps -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#64B5F6"
                app:cardCornerRadius="14dp">
                <LinearLayout

                    android:orientation="vertical"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_steps"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Daily Steps"
                            android:textSize="18dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <ImageButton
                            android:id="@+id/btnStepsMinus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_minus"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:contentDescription="Minus"/>
                        <EditText
                            android:id="@+id/etStepsGoal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:background="@android:drawable/edit_text"
                            android:textSize="18sp"/>
                        <ImageButton
                            android:id="@+id/btnStepsPlus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_plus"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:contentDescription="Plus"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Calories -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#FFEB3B"
                app:cardCornerRadius="14dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_calories"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Calories"
                            android:textSize="18dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <ImageButton
                            android:id="@+id/btnCalMinus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_minus"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:contentDescription="Minus"/>
                        <EditText
                            android:id="@+id/etCalGoal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:background="@android:drawable/edit_text"
                            android:textSize="18sp"/>
                        <ImageButton
                            android:id="@+id/btnCalPlus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_plus"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:contentDescription="Plus"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Distance (km) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#B2F2BB"
                app:cardCornerRadius="14dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/location"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Distance"
                            android:textSize="18dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <ImageButton
                            android:id="@+id/btnDistMinus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_minus"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:contentDescription="Minus"/>
                        <EditText
                            android:id="@+id/etDistGoal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:background="@android:drawable/edit_text"
                            android:textSize="18sp"/>
                        <ImageButton
                            android:id="@+id/btnDistPlus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_plus"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:contentDescription="Plus"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Water Intake (glasses) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFCDE1"
                app:cardCornerRadius="14dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/waterdrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Water Intake"
                            android:textSize="18dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <ImageButton
                            android:id="@+id/btnWaterMinus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_minus"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:contentDescription="Minus"/>
                        <EditText
                            android:id="@+id/etWaterGoal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:background="@android:drawable/edit_text"
                            android:textSize="18sp"/>
                        <ImageButton
                            android:id="@+id/btnWaterPlus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_plus"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:contentDescription="Plus"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Save -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveGoals"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Save"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom pill bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBarCard"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="36dp"
        app:cardUseCompatPadding="false"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#E2D6FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:menu="@menu/menu_bottom_nav"
            app:itemIconTint="@color/selector_bottom_nav_icon"
            app:itemTextColor="@color/selector_bottom_nav_text"
            app:labelVisibilityMode="labeled"
            app:itemBackground="@drawable/bottom_nav_item_bg"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
