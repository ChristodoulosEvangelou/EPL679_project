<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top row: date -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDate"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- "Steps Today" -->
        <TextView
            android:id="@+id/tvStepsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ðŸ‘£  Steps Today"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <!-- Steps ring (DonutProgressView) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp">

            <com.example.myapplication.DonutProgressView
                android:id="@+id/stepsDonut"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center" />

            <!-- ÎšÎµÎ¯Î¼ÎµÎ½Î± ÏƒÏ„Î¿ ÎºÎ­Î½Ï„ÏÎ¿ -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvSteps"
                    android:textStyle="bold"
                    android:textSize="34sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvStepsGoal"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Metric grid -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/cardDistance"
                    layout="@layout/view_metric_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp" />

                <include
                    android:id="@+id/cardCalories"
                    layout="@layout/view_metric_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <include
                    android:id="@+id/cardAvgHr"
                    layout="@layout/view_metric_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"/>

                <include
                    android:id="@+id/cardActiveTime"
                    layout="@layout/view_metric_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Water Intake -->
        <!-- Card: Water Intake (glasses) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#FFEAF6"
            app:cardCornerRadius="14dp"
            app:strokeColor="@android:color/transparent"
            android:layout_marginTop="12dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="14dp">

                <!-- header row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/waterdrop"/>

                    <TextView
                        android:id="@+id/tvWaterTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Water Intake"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                    <!-- Î ÏÎ¬ÏƒÎ¹Î½Î¿Ï‚ ÎºÏÎºÎ»Î¿Ï‚ + Î±Ï€ÏŒÎ»Ï…Ï„Î± ÎºÎµÎ½Ï„ÏÎ±ÏÎ¹ÏƒÎ¼Î­Î½Î¿ -->
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_green_circle"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <ImageView
                            android:id="@+id/btnWaterPlus"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add_center"
                            />
                    </FrameLayout>
                </LinearLayout>


                <!-- subtitle -->
                <TextView
                    android:id="@+id/tvWaterSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="0 of 10 glasses"
                    android:textColor="#444"/>

                <!-- ÎºÎ¿Ï…ÎºÎ¯Î´ÎµÏ‚ -->
                <LinearLayout
                    android:id="@+id/llWaterDots"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
