<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top row: date -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDate"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- "Steps Today" -->
        <TextView
            android:id="@+id/tvStepsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ðŸ‘£  Steps Today"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <!-- Steps ring (DonutProgressView) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp">

            <com.example.myapplication.DonutProgressView
                android:id="@+id/stepsDonut"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center" />

            <!-- ÎšÎµÎ¯Î¼ÎµÎ½Î± ÏƒÏ„Î¿ ÎºÎ­Î½Ï„ÏÎ¿ -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvSteps"
                    android:textStyle="bold"
                    android:textSize="34sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvStepsGoal"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Metric grid -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/cardCalories"
                    layout="@layout/view_metric_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"/>

                <include
                    android:id="@+id/cardDistance"
                    layout="@layout/view_metric_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <include
                    android:id="@+id/cardAvgHr"
                    layout="@layout/view_metric_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"/>

                <include
                    android:id="@+id/cardActiveTime"
                    layout="@layout/view_metric_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Water Intake -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#FFE6F7"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- header: icon + title + plus -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- NEW icon -->
                    <ImageView
                        android:id="@+id/ivWaterIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_water_intake"
                        android:contentDescription="@string/app_name"/>

                    <TextView
                        android:id="@+id/tvWaterTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Water Intake"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <ImageButton
                        android:id="@+id/btnWaterPlus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="Add glass"
                        android:src="@android:drawable/ic_input_add"/>
                </LinearLayout>

                <!-- Ï…Ï€ÏŒÏ„Î¹Ï„Î»Î¿Ï‚ Ï€.Ï‡. '4 of 8 glasses' -->
                <TextView
                    android:id="@+id/tvWaterSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="0 of 8 glasses"/>

                <!-- progress -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/waterBar"
                    style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    app:trackCornerRadius="6dp"
                    app:indicatorColor="#3B82F6"
                    app:trackColor="#F2D9EB"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
