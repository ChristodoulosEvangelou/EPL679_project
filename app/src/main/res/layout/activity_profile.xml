<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable περιεχόμενο -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Mini tabs (Profile | Goals) -->
            <!-- mini tabs with icons (PROFILE SELECTED) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="#EEE6FF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleTabs"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:checkedButton="@+id/btnTabProfile"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTabProfile"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Info"
                            android:textAllCaps="false"
                            android:textColor="@color/selector_segment_text"
                            app:icon="@drawable/profile_button"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/selector_segment_text"
                            app:backgroundTint="@color/selector_segment_bg"
                            app:cornerRadius="20dp"
                            app:strokeColor="@android:color/transparent"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTabGoals"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Goals"
                            android:textAllCaps="false"
                            android:textColor="@color/selector_segment_text"
                            app:icon="@drawable/ic_goal"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/selector_segment_text"
                            app:backgroundTint="@color/selector_segment_bg"
                            app:cornerRadius="20dp"
                            app:strokeColor="@android:color/transparent"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- divider στο κέντρο για το look -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="#B7ACD9"
                        app:layout_constraintTop_toTopOf="@id/toggleTabs"
                        app:layout_constraintBottom_toBottomOf="@id/toggleTabs"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Avatar placeholder -->
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_profile_pic"
                android:contentDescription="@string/app_name"/>

            <!-- First name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="First Name">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Last Name">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Height (cm) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Height (cm)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHeight"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Weight (kg) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Weight (kg)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etWeight"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="Save"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom pill bar (όπως στην home) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBarCard"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="36dp"
        app:cardUseCompatPadding="false"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#E2D6FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:menu="@menu/menu_bottom_nav"
            app:itemIconTint="@color/selector_bottom_nav_icon"
            app:itemTextColor="@color/selector_bottom_nav_text"
            app:labelVisibilityMode="labeled"
            app:itemBackground="@drawable/bottom_nav_item_bg"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
