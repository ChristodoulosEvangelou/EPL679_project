<resources>
    <!-- Στρογγυλή “pill” -->
    <style name="ShapeAppearanceOverlay.App.FullPill" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Στυλ για active indicator -->
    <style name="Widget.App.BottomNav.ActiveIndicator" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.FullPill</item>

        <!-- μέγεθος & περιθώρια της φούσκας -->
        <item name="android:width">56dp</item>
        <item name="android:height">36dp</item>
        <item name="android:insetLeft">8dp</item>
        <item name="android:insetRight">8dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>

        <!-- ΧΡΩΜΑ ΦΟΥΣΚΑΣ — πιο έντονο -->
        <item name="backgroundTint">#9B87FF</item>
        <!-- θες πιο σκούρο; δοκίμασε # -->
    </style>


    <style name="SegBase" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/seg_btn_text</item>
        <item name="backgroundTint">@color/seg_btn_bg</item>
        <item name="strokeColor">@color/seg_btn_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/seg_btn_ripple</item>
        <item name="iconTint">@color/seg_btn_text</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="minHeight">40dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="SegFirst" parent="SegBase">
        <item name="shapeAppearance">@style/SegShapeFirst</item>
    </style>
    <style name="SegMiddle" parent="SegBase">
        <item name="shapeAppearance">@style/SegShapeMiddle</item>
    </style>
    <style name="SegLast" parent="SegBase">
        <item name="shapeAppearance">@style/SegShapeLast</item>
    </style>

    <style name="SegShapeFirst" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="SegShapeMiddle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
    <style name="SegShapeLast" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
